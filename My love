<style>
  body {
    margin: 0;
    height: 100vh;
    background: radial-gradient(circle, #ff9a9e, #fad0c4);
    overflow: hidden;
    font-family: 'Segoe UI', sans-serif;
  }

  .container {
    text-align: center;
    position: relative;
    top: 40%;
    transform: translateY(-50%);
  }

  h1 {
    color: #b3002d;
    font-size: 2.5em;
    margin-bottom: 40px;
  }

  .yes {
    font-size: 24px;
    padding: 18px 40px;
    background: #e6004c;
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    box-shadow: 0 10px 25px rgba(0,0,0,0.3);
  }

  .no {
    position: absolute;
    font-size: 12px;
    padding: 6px 12px;
    background: #555;
    color: white;
    border: none;
    border-radius: 20px;
    cursor: pointer;
  }

  #loveMessage {
    margin-top: 30px;
    font-size: 28px;
    color: #b3002d;
    font-weight: bold;
    min-height: 40px;
  }

  .heart {
    position: absolute;
    font-size: 20px;
    animation: float 6s linear infinite;
    opacity: 0.7;
  }

  @keyframes float {
    0% { transform: translateY(100vh); }
    100% { transform: translateY(-10vh); }
  }

  canvas {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
  }
